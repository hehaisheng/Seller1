<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/change_image_one"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/meat"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/change_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/change_image_one"
                android:layout_toRightOf="@+id/change_image_one"
                android:layout_marginLeft="10dp"
                android:text="价格12元/斤"
                android:textColor="@color/text_common"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/change_sell_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/change_price_text"
                android:layout_alignTop="@+id/change_price_text"
                android:layout_marginLeft="20dp"
                android:paddingRight="5dp"
                android:text="销量122/月"
                android:textColor="@color/text_common"
                android:textSize="13sp"/>


            <TextView
                android:id="@+id/change_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_price_text"
                android:layout_alignLeft="@+id/change_price_text"
                android:layout_marginTop="10dp"
                android:text="商品名:猪肉"
                android:textColor="@color/itemBackground"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/change_goods_price_new"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/change_price_text"
                android:layout_below="@+id/change_goods_name"
                android:gravity="center"
                android:text="新价格:"
                android:textColor="@color/itemBackground"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/change_edit"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:hint="15元"
                android:layout_alignTop="@+id/change_goods_price_new"
                android:layout_toRightOf="@id/change_goods_price_new"
                android:textColorHint="@color/itemBackground"
                android:digits="0123456789"
                android:background="@null"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/text_common"
                />


            <TextView
                android:id="@+id/change_goods_price_sure"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/change_edit"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_back"
                android:textSize="11sp"/>


            <TextView
                android:id="@+id/change_goods_delete"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/change_price_text"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="删除"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_back"
                android:textSize="11sp"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>





    </android.support.v7.widget.CardView>



</com.zhy.android.percent.support.PercentRelativeLayout>
